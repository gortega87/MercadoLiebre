    <!-- FORMULARIO -->

    <form action="/" method="POST" class="formulario">  <!-- metodo get que envia datos a home.ejs (action="/"") -->
     
      <div class="datos">
        <input type="text" name="nombre" placeholder="Nombre y apellido" minlength="5">
        <span class="error">Ingresa un nombre de más de 5 caracteres</span>

        <input type="text" name="usuario" placeholder="Nombre de usuario" minlength="5">
        <span class="error">Ingresa un nombre de más de 5 caracteres</span>

        <input type="email" name="email" placeholder="E-mail">
        <span class="error">Ingresa un correo válido</span>
      </div>

      <div class="nacimiento">
        <label><h3>Fecha de nacimiento:</h3></label>
        <input type="date" name="fechaNacimiento">
      </div>
      <div class="domicilio">
        <input type="text" name="domicilio" placeholder="Domicilio">
      </div>
      <div class="seleccion">
        <label><h3>Perfil de usuario:</h3></label><br>
        <label for="perfilComp"> 
          <input type="radio" id="perfilComp" name="perfil" value="comprar">
          <p>Comprar</p>
        </label>
        <label for="perfilComp"> 
          <input type="radio" id="perfilVen" name="perfil" value="vender">
          <p>Vender</p>
        </label>    
      </div>
    
      <div class="seleccion">
        <label><h3>Categorias de interés:</h3></label>
        
        <label for="electro">
          <input type="checkbox" id="electro" name="categoria" value="electro">
          <p>Electro</p>
        </label>
        
        <label for="moda">
          <input type="checkbox" id="electro" name="categoria" value="moda">
          <p>Moda</p>
        </label>

        <label for="hogar">
          <input type="checkbox" id="electro" name="categoria" value="hogar">
          <p>Hogar</p>
        </label>

        <label for="jugueteria"> 
          <input type="checkbox" id="electro" name="categoria" value="jugueteria">
          <p>Jugueteria</p>
        </label>

        <label for="vidaSana"> 
          <input type="checkbox" id="electro" name="categoria" value="vidaSana">
          <p>Vida Sana</p>
        </label>
      </div>

      <div class="foto">
        <label><h3>Foto de usuario:</h3></label>
        <input type="file" name="fotoUsuario" accept="image/png, image/jpeg">
      </div>

      <div class="password">
        <input type="password" name="contrasena" placeholder="Contraseña" minlength="5">
        <span class="error">Ingresa una contraseña de más de 5 caracteres</span>
      </div>
      <div class="password">
        <input type="password" name="contrasena2" placeholder=" Confirmar contraseña" minlength="5">
        <span class="error">Ingresa de nuevo tu contraseña</span>
      </div>

      <button type="reset">Borrar</button>
      <button type="submit">Guardar</button>

    </form>


